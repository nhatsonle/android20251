<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Main content using LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Thanh Header màu đỏ -->
        <LinearLayout
            android:id="@+id/headerBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#D93025"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Icon Menu (Hamburger) -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_menu"
                android:contentDescription="@string/menu" />

            <!-- Tiêu đề Inbox -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="32dp"
                android:text="@string/inbox"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Icon Search -->
            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="@string/search" />

        </LinearLayout>

        <!-- Gray notification bar under header -->
        <LinearLayout
            android:id="@+id/notificationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DBDADA"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Left icon -->
            <ImageView
                android:id="@+id/noticeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_check_circle"
                android:contentDescription="@string/notice_icon_desc"
                app:tint="#FFFFFF" />

            <!-- Message -->
            <TextView
                android:id="@+id/noticeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notice_message"
                android:textColor="#5F6368"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp" />

            <!-- Close icon on the right of the bar -->
            <ImageView
                android:id="@+id/noticeClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/notice_close_desc"
                android:padding="2dp"
                android:src="@drawable/ic_close_circle" />

        </LinearLayout>

        <!-- Danh sách Email -->
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:paddingBottom="0dp" />

    </LinearLayout>

    <!-- Floating compose (pencil) button bottom-right -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCompose"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/compose"
        app:backgroundTint="#D93025"
        app:srcCompat="@drawable/ic_edit"
        app:elevation="8dp"
        app:pressedTranslationZ="12dp"
        app:fabSize="normal"
        app:fabCustomSize="56dp" />

</FrameLayout>